page{
  background-color: rgb(244, 246, 245);
}
.swiper-container{
  width: 100%;
  /* height: 900rpx; */
  height: 70vh;

  
}
.search-container{
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 15rpx 0;
  background-color: #f5f2f2;

}
.search-box{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 90%;
  height: 50rpx;
  background-color: #fafafa;
  /* border: 1px solid #d07a87; */
  border-radius: 20rpx;
  padding: 5rpx 15rpx;
}
.search-text{
  text-align: center;
  color: gray;
}
.search-icon{
  position: absolute;
  top: 30%;
  left: 5%;
}

/* 分割线 */
.line-container{
  padding: 10rpx 50rpx;
  display: flex;
  justify-content: space-between;
}
.line-item{
  font-size: 26rpx;
  color: rgb(255, 87, 4);

}

/* 商品分类 */
.category-container{
  width: 100%;
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}
.category{
  width: 95%;
  font-size: 24rpx;
  border-radius: 25rpx;
  overflow: hidden;
}
.category-image{
  border: 1rpx solid rgba(212, 210, 210, 0.8);
  border-radius: 20rpx;
}

/* 商品活动 */
.activity{
  width: 100%;
  height: 490rpx;
  display: flex;
}
.activity-left{
  /* width: 355rpx; */
  height: 490rpx;
  
}
.activity-right{
  width: auto;
  height: 490rpx;
  display: flex;
  flex-direction: column;
}
.activity-right-item{
  width: 390rpx;
  height: 50%;
  
}

/* 商品列表 */
.like-tip{
  /* width: 100%; */
  padding: 20rpx 25rpx;
  font-size: 0.8rem;
  /* font-weight: 600; */
  color: gray;
  text-align: center;
  background-color: #fff;
}
.row-container{
  padding: 0 15rpx 15rpx 15rpx;
  /* background-color:#e2e0e0; */
  background-color:#f5f2f2;
}
.col{
  margin-top: 15rpx;
  height: 470rpx;
}
.col-container{
  /* width: 100%; */
  position: relative;
  height: 100%;
  background-color: #fff;
  
  border-radius: 10rpx;
  /* border: 1rpx solid gray; */
}
.goods-tag{
  position: absolute;
  top: 0;
  left: 0;
  padding: 5rpx 25rpx;
  color: #fff;
  font-size: 20rpx;
  background-color:#8cc64a; 
}
.item-name{
  height: 60rpx;
  font-size: 0.8rem;
  padding: 0 15rpx;
  margin-bottom: 10rpx;
}
.item-price{
  color: #cc0623;
  font-size: 0.9rem;
  text-align: left;
  padding: 0 15rpx;
  
}
.bottom{
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 0.8rem;
  color: gray;
  background-color: #f5f2f2;
  padding: 30rpx 0 ;

}
.loading{
  display: flex;
  justify-content: center;
  align-items: center;
  /* margin-top: 50rpx; */
  padding: 20rpx 0;

  background-color: #f5f2f2;
}

/* 底部 */
.bottom-container{
  height: 100rpx;
  height: calc(100rpx +  constant(safe-area-inset-bottom)); 
  height: calc(100rpx + env(safe-area-inset-bottom)) ;
  background-color: rgb(244, 246, 245);
}