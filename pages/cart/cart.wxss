/* 购物车登录start */
.box{
  /* width: 100vw;
  height: 100vh; */
  width: 100%;
  height: 100%;
  margin-top: 15rpx;
}
.image-container{
  display: flex;
  justify-content: center;
}
.login-container{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 20rpx;
}
.login-button{
  width: 80%;

}
.desc-container{
  margin-top: 10rpx;
  text-align: center;
  font-size: 0.8rem;
  color: gray;
}
/* 购物车登录end */

/* 购物车为空提示start */
.empty-tip{
  width: 100%;
  height: 100%;
  margin-top: 15rpx;
}
.push-button-container{
  display: flex;
  justify-content: center;
}
.push-button{
  border: 1px solid gray;
  font-size: 0.9rem;
  padding: 15rpx 30rpx;
  margin-top: 20rpx;
}
/* 购物车为空提示end */



/* 购物车顶部信息start */
.cart-top{
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx; 
}
.cart-title{
  margin-left: 10rpx;
}
.edit-button{
  font-size: 0.8rem;
}
.complete-button{
  font-size: 0.8rem;
  font-weight: 700;
}
.tip-container{
  display: flex;
  justify-content: flex-start;
  align-items: center;
  background-color: #f5f2f2;
  padding: 10rpx 20rpx;
  font-size: 0.8rem;

}
.tip-icon{
  padding: 5rpx 5rpx;
  border: 1px solid black;
  margin-right: 10rpx;
}
/* 购物车顶部信息end */


/* 底部提交订单栏 */
.cart-footer{
  position: fixed;
  bottom: 92rpx;
  bottom: calc(92rpx +  constant(safe-area-inset-bottom)); 
  bottom: calc(92rpx + env(safe-area-inset-bottom)) ;
  left: 0;
  width: 100%;
  height: 90rpx;
  /* line-height: 180rpx; */
  padding:0 0rpx 0 40rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(245, 242, 242, 0.9);
  border-bottom: 1rpx solid rgba(245, 242, 242, 0.9);
  display: flex;
  justify-content: space-between;
  align-items: center;  
  font-size: 0.8rem;
  background-color: #fff;
  z-index: 100;
}


.selectAll-button{
  display: flex;

}
.control-container{
  display: flex;
  justify-content: flex-start;
  width: 60%;
}
.info-cotainer{
  display: flex;
  justify-content: center;
  align-items: center;
  width: 250rpx;
}
.control-button, .delete-button{
  padding: 10rpx 30rpx;
  background-color: black;
  font-size: 0.9rem;
  color: white;
  border-radius: 10rpx;
  width: 100rpx;
  text-align: center;

}
.delete-button{
  align-self:flex-end;
}
@media screen and (max-height:568px){
  .control-container{
    width: 70%;
  }
  .control-button, .delete-button{
    width: 140rpx;
  }
  .cart-footer{
    bottom: 120rpx;
  
    }
}

.test{
  width: 100wh;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart{
  /* width: 100wh;
  height: 100rpx; */
  border-top: 1px solid gray;
  border-bottom: 1px solid gray;
  margin-bottom: 100rpx;
}


/* 底部提交订单栏 */

/* 购物车列表start */
.checkbox-container{
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-main{
  /* width: 100%; */
  height: 100%;
  padding: 0rpx 0rpx 15rpx 20rpx;
}
.cart-list{
 
  /* border: 1px solid red; */
}
.cart-item{
  display: flex;
  border-bottom: 1rpx solid rgba(245, 242, 242, 1);

}
.item-card{
  width: 100%;
 
  position: relative;
}
.van-card{
  padding: 0;

}
.card-root{
  width: 100%;
  padding: 20rpx 10rpx 20rpx 0rpx !important;
  /* height: 250rpx; */
  /* border-bottom: 1rpx solid rgba(245, 242, 242, 1); */
  /* margin-top: 10rpx; */
  background-color: #fff!important;
}
/* .thumb-box{
  height: 240rpx
} */
.van-card__thumb{
  /* height: 240rpx !important; */
}
.card-stepper{
  position: absolute;
  right: 3%;
  bottom: 5%;

}
.item.title{
  font-size: 26rpx;
}
/* 购物车列表end */

/* 购物车下方推荐 start*/
.list-bottom{
  width: 100%;
  margin-top: 20rpx;
}
.like-tip{
  /* width: 100%; */
  padding: 20rpx 25rpx;
  font-size: 0.8rem;
  /* font-weight: 600; */
  color: gray;
  text-align: center;
}

.line{
  border-bottom: 15rpx solid #f5f2f2;
}

/* 推荐列表start */
.row-container{
  padding: 0 15rpx 15rpx 15rpx;
  /* background-color:#e2e0e0; */
  background-color:#f5f2f2;
}
.col{
  margin-top: 15rpx;
  height: 470rpx;
}
.col-container{
  /* width: 100%; */
  height: 100%;
  background-color: #fff;
  
  border-radius: 10rpx;
  /* border: 1rpx solid gray; */
}
.item-name{
  height: 60rpx;
  font-size: 0.8rem;
  padding: 0 15rpx;
  margin-bottom: 10rpx;
}
.item-price{
  color: #cc0623;
  font-size: 0.9rem;
  text-align: left;
  padding: 0 15rpx;
  
}

/* 推荐列表end*/

.bottom-tip,.empty-bottom-tip{
  display: flex;
  justify-content: center;
  align-items: flex-start;
  background-color: #f5f2f2;
  font-size: 0.8rem;
  color: gray;

  padding: 15rpx 0;
}
.bottom-tip{
  height: 250rpx;
  height: calc(250rpx +  constant(safe-area-inset-bottom)); 
  height: calc(250rpx + env(safe-area-inset-bottom)) ;
}
.empty-bottom-tip{
  height: 170rpx;
  height: calc(170rpx +  constant(safe-area-inset-bottom)); 
  height: calc(170rpx + env(safe-area-inset-bottom)) ;
}
/* 购物车下方推荐 end*/

