page {
  background-color: #f5f5f5;

}

/* 顶部订单状态提示 */
.top-container {
  width: 100%;
  height: 170rpx;
  background-color: #D24D57;
  position: relative;
}

.top-container .txt {
  position: absolute;
  color: white;
  top: 20%;
  left: 5%;
  font-weight: 500;
  font-size: 34rpx;
}

.top-container .txt text {
  margin-left: 10rpx;
}

/* 订单信息 */
.main-container {
  position: absolute;
  left: 0;
  top: 95%;
  /* height: 100vh; */
  min-height: 80vh;
  width: 100%;
  background-color: #f6f2f6;
  border-radius: 40rpx 40rpx 0 0;
  margin-top: -20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 地址信息 */
.address-container {
  display: flex;
  align-items: center;
  width: 90vw;
  padding: 10rpx 10rpx;
  background-color: #fff;
  margin-top: 40rpx;
  border-radius: 10rpx;
}

.mid-top {
  font-size: 32rpx;
  padding: 10rpx 0;

}

.mid-bottom {
  color: #999;
  font-size: 26rpx;
}

.address-left {
  /* width: 5vw; */
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 0 20rpx;
}

.address-mid {
  width: 80vw;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;

}

.address-right {
  display: flex;
  justify-content: center;
  align-items: center;

}

/* 商品列表 */
.goodsList-container {
  width: 90vw;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
}

.goodsList-line {
  /* margin-top: 15rpx; */
  border-bottom: 1px solid rgba(218, 218, 218, 0.5);
  width: 100vw;
  padding: 10rpx 20rpx!important;
}

.goodsList-item {
  border-bottom: 1px solid rgba(218, 218, 218, 0.5);

}

.item-price {
  color: black !important;
  font-weight: 500 !important;
  font-size: 26rpx;
}

.item.title {
  font-size: 26rpx;
}

/* 订单编号和时间 */
.order-info {
  width: 90vw;
  font-size: 26rpx;
  background-color: #fff;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  display: flex;
  flex-direction: column;
  /* align-items: center; */
  justify-content: center;
}

.order-info view {
  height: 60rpx;
  display: flex;
  /* flex-direction: column; */
  justify-content: flex-start;
  align-items: center;
  padding: 0 10rpx;
}

.order-info text {
  margin-left: 10rpx;
}

/* 买家留言 */
.message {
  width: 90vw;
  /* height: auto; */
  background-color: #fff;
  padding: 10rpx;
  border-radius: 10rpx;
  margin-top: 10rpx;
  display: flex;
  font-size: 26rpx;
  color: #999;
}

.message .title {
  width: 20%;
  padding: 0 10rpx;
}


/* 订单金额信息 */
.order-price {
  width: 90vw;
  background-color: #fff;
  padding: 10rpx;
  display: flex;
  flex-direction: column;
  font-size: 26rpx;
  margin-top: 10rpx;
  /* margin-bottom: 100rpx; */
}

.info-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 10rpx;
}

/* 底部 */
.bottom-container {
  height: 100rpx;
  height: calc(100rpx + constant(safe-area-inset-bottom));
  height: calc(100rpx + env(safe-area-inset-bottom));
  background-color: #f5f5f5;
}

/* 底部操作栏 */
.bottom{
  background-color: #f6f2f6;
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 0rpx;
  height: calc(0rpx +  constant(safe-area-inset-bottom)); 
  height: calc(0rpx + env(safe-area-inset-bottom)) ;
  z-index: 100;
}
.cart-footer{
  position: fixed;
  bottom: 0rpx;
  bottom: calc(0rpx + constant(safe-area-inset-bottom)); 
  bottom: calc(0rpx + env(safe-area-inset-bottom)) ;
  left: 0;
  width: 100%;
  height: 90rpx;
  /* line-height: 180rpx; */
  padding:0 20rpx;
  box-sizing: border-box;
  border-top: 1rpx solid rgba(245, 242, 242, 0.9);
  border-bottom: 1rpx solid rgba(245, 242, 242, 0.9);
  display: flex;
  justify-content: flex-end;
  align-items: center;  
  font-size: 0.8rem;
  background-color: #fff;
  z-index: 100;
  padding: 0 20rpx;
}

.cart-footer .btn{
  /* font-size: 30rpx; */
  margin-left: 10rpx;

}

/* 立即付款面板 */
.popup-container{
  width: 70vw;
  /* height: 22vh; */
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  padding: 90rpx 20rpx 30rpx 20rpx;
}
.popup-title{
  font-size: 40rpx;
}
.popup-price{
  font-size: 60rpx;
  /* margin-top: 10rpx; */
  padding: 0 0 25rpx 0;
  border-bottom: 1rpx solid rgba(245, 242, 242, 0.9);
}
.btns-container{
  width: 100%;
  display: flex;
  justify-content: space-between;
  padding: 20rpx 30rpx;
}
.popup-btn{
  width: 45%;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 10rpx;
  
}
.cancel-btn{
  border: 1rpx solid #ff6700;
  color: #ff6700;
}
.comfire-btn{
  color: white;
  background-color: rgb(5, 193, 96);
}

/* 确认收货面板 */
.comfire-receipt{
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 30rpx 0 0 0;
}
.comfire-receipt .title{
  font-weight: 700;
  font-size: 34rpx;
  margin-bottom: 20rpx;

}
.comfire-receipt .image{
  display: flex;
}
.show-image, .more{
  width: 160rpx;
  height: 160rpx;
  margin-left: 10rpx;
  border-radius:10rpx;
  border: 1rpx solid rgba(212, 210, 210, 0.5);
}
.more{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.comfire-receipt .desc{
  text-align: center;
  font-size: 28rpx;
  padding: 20rpx 110rpx;  
}
.comfire-receipt .btn{
  width: 80%;
  height: 80rpx;
  color: white;
  background: linear-gradient(to right, #4bb0ff, #6149f6);
  border-radius: 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-bottom: 20rpx;
}